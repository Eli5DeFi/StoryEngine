# ============================================
# NarrativeForge Environment Variables
# ============================================

# Database
DATABASE_URL=postgresql://narrativeforge:narrativeforge_dev_password@localhost:5432/narrativeforge
REDIS_URL=redis://localhost:6379

# AI / LLM
OPENAI_API_KEY=sk-proj-...
ANTHROPIC_API_KEY=sk-ant-...
PINECONE_API_KEY=...
PINECONE_INDEX=narrativeforge-embeddings
PINECONE_ENVIRONMENT=us-east1-gcp

# Blockchain (Base L2)
NEXT_PUBLIC_BASE_CHAIN_ID=8453
NEXT_PUBLIC_ALCHEMY_API_KEY=...
DEPLOYER_PRIVATE_KEY=0x...
TREASURY_ADDRESS=0x...
OPERATIONAL_WALLET_ADDRESS=0x...

# USDC on Base Mainnet
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Base RPC URLs
BASE_SEPOLIA_RPC=https://base-sepolia.g.alchemy.com/v2/YOUR_KEY
BASE_MAINNET_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# IPFS (Pinata)
PINATA_API_KEY=...
PINATA_SECRET=...
PINATA_JWT=...

# Security
STORY_ENGINE_SIGNER_KEY=0x...
SETTLEMENT_MULTISIG=0x...
JWT_SECRET=your-jwt-secret-key-here

# Next Auth (optional for admin)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Sentry (optional - error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Development
NODE_ENV=development
LOG_LEVEL=debug

# Feature Flags
ENABLE_AI_AGENTS=true
ENABLE_COMPENDIUM=true
ENABLE_SCENE_GENERATION=true
ENABLE_AUDIO=false

# Rate Limiting
API_RATE_LIMIT=100
AGENT_RATE_LIMIT=50

# Betting Configuration
DEFAULT_BETTING_DURATION=86400
MIN_BET_AMOUNT=1
MAX_BET_AMOUNT=1000
MAX_BRANCHES=5

# Production Environment Variables
# Copy this to .env.production and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string from your provider
# Railway: postgresql://user:pass@host:port/db
# Supabase: postgresql://postgres.xxx:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true
# Neon: postgresql://user:pass@host/db?sslmode=require
DATABASE_URL="postgresql://YOUR_DB_URL_HERE"

# ============================================================================
# BLOCKCHAIN (Base Mainnet)
# ============================================================================
NEXT_PUBLIC_CHAIN_ID="8453"
BASE_RPC_URL="https://mainnet.base.org"

# Smart Contract Addresses (update after mainnet deployment)
NEXT_PUBLIC_USDC_ADDRESS="0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913"
NEXT_PUBLIC_BETTING_POOL_ADDRESS="YOUR_DEPLOYED_CONTRACT_ADDRESS"
NEXT_PUBLIC_FORGE_TOKEN_ADDRESS="YOUR_TOKEN_ADDRESS"

# Deployment Wallet (use secure key management in production!)
PRIVATE_KEY="YOUR_PRIVATE_KEY_HERE"
DEPLOYER_ADDRESS="YOUR_WALLET_ADDRESS"
TREASURY_ADDRESS="YOUR_TREASURY_ADDRESS"

# ============================================================================
# API KEYS
# ============================================================================
# Basescan (for contract verification)
# Get from: https://basescan.org/myapikey
BASESCAN_API_KEY="YOUR_BASESCAN_KEY"

# Bankr (for $FORGE token launch)
# Get from: https://bankr.bot/
BANKR_API_KEY="YOUR_BANKR_KEY"

# AI APIs (for story generation)
OPENAI_API_KEY="sk-YOUR_OPENAI_KEY"
ANTHROPIC_API_KEY="sk-ant-YOUR_ANTHROPIC_KEY"

# ============================================================================
# APPLICATION
# ============================================================================
NEXT_PUBLIC_APP_URL="https://voidborne.ai"
NODE_ENV="production"

# WalletConnect Project ID (for RainbowKit)
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="YOUR_PROJECT_ID"

# ============================================================================
# OPTIONAL: Analytics & Monitoring
# ============================================================================
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX" # Google Analytics
# SENTRY_DSN="https://..." # Error tracking
# VERCEL_ANALYTICS="true" # Vercel analytics

{
  "name": "voidborne",
  "version": "0.1.0",
  "private": true,
  "description": "Voidborne: The Silent Throne - Space Political Saga Ã— Blockchain Prediction Market",
  "repository": {
    "type": "git",
    "url": "https://github.com/eli5-claw/StoryEngine.git"
  },
  "author": "eli5defi",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:contracts": "cd packages/contracts && anvil",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:contracts": "cd packages/contracts && forge test -vvv",
    "test:e2e": "cd apps/web && playwright test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "cd apps/web && pnpm db:migrate",
    "db:seed": "cd apps/web && pnpm db:seed",
    "contracts:deploy:local": "cd packages/contracts && forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast",
    "contracts:deploy:sepolia": "cd packages/contracts && forge script script/Deploy.s.sol --rpc-url $BASE_SEPOLIA_RPC --broadcast --verify",
    "contracts:deploy:mainnet": "cd packages/contracts && forge script script/Deploy.s.sol --rpc-url $BASE_MAINNET_RPC --broadcast --verify",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
